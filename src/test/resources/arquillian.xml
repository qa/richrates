<arquillian xmlns="http://jboss.com/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <!-- <property name="maxTestClassesBeforeRestart">10</property> -->
        <!-- copy the deployed archive to target directory so user can check its content -->
        <property name="deploymentExportPath">target/</property>
    </engine>

    <container qualifier="jbossas-managed-70">
        <configuration>
            <property name="serverConfig">standalone-preview.xml</property>
            <property name="outputToConsole">false</property>
            <property name="javaVmArguments">-Djboss.bind.address=0.0.0.0</property>
        </configuration>
    </container>

    <container qualifier="jbossas-remote-70">
    </container>

    <container qualifier="jbossas-managed-71">
        <configuration>
            <property name="serverConfig">standalone-full.xml</property>
            <property name="outputToConsole">false</property>
            <property name="javaVmArguments">-Djboss.bind.address=0.0.0.0</property>
        </configuration>
    </container>

    <container qualifier="jbossas-remote-71">
    </container>

    <extension qualifier="webdriver">
        <property name="browserCapabilities">firefox</property>
        <!-- for Android driver -->
        <property name="remoteAddress">http://localhost:4444/wd/hub</property>
    </extension>

</arquillian>
